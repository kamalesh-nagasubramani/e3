import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import StandardScaler, LabelEncoder
from sklearn.linear_model import LinearRegression, Ridge, Lasso
from sklearn.metrics import mean_squared_error, r2_score
import warnings
warnings.filterwarnings('ignore')
print("Student Name: Kamalesh N")
print("Roll Number: 24BAD054")
print("------------------------------------------------------------------")
file_path = r"c:\Users\kamal\Downloads\archive (7)\StudentsPerformance.csv"
try:
    df = pd.read_csv(file_path)
    print("Dataset loaded successfully.")
except FileNotFoundError:
    print(f"Error: File not found at {file_path}")
    exit()
np.random.seed(42)
df['Study Hours'] = np.random.randint(1, 10, size=len(df))
df['Attendance'] = np.random.randint(60, 100, size=len(df))
df['Sleep Hours'] = np.random.randint(5, 10, size=len(df))
df['Final Score'] = (df['math score'] + df['reading score'] + df['writing score']) / 3
print("Added features: Study Hours, Attendance, Sleep Hours")
print("Computed Target Variable: Final Score")
le_parent = LabelEncoder()
df['Parental Education Encoded'] = le_parent.fit_transform(df['parental level of education'])
le_prep = LabelEncoder()
df['Test Prep Encoded'] = le_prep.fit_transform(df['test preparation course'])
features = ['Study Hours', 'Attendance', 'Parental Education Encoded', 'Test Prep Encoded', 'Sleep Hours']
target = 'Final Score'
X = df[features]
y = df[target]
if X.isnull().sum().sum() > 0:
    print("Handling missing values with median imputation...")
    X = X.fillna(X.median())
else:
    print("No missing values found in input features.")
scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)
X_scaled = pd.DataFrame(X_scaled, columns=features)
X_train, X_test, y_train, y_test = train_test_split(X_scaled, y, test_size=0.2, random_state=42)
lr_model = LinearRegression()
lr_model.fit(X_train, y_train)
y_pred = lr_model.predict(X_test)
mse = mean_squared_error(y_test, y_pred)
rmse = np.sqrt(mse)
r2 = r2_score(y_test, y_pred)
print(f"\n--- Model Performance (Linear Regression) ---")
print(f"MSE: {mse:.4f}")
print(f"RMSE: {rmse:.4f}")
print(f"R² Score: {r2:.4f}")
print("\n--- Coefficient Analysis ---")
coef_df = pd.DataFrame({'Feature': features, 'Coefficient': lr_model.coef_})
print(coef_df)
ridge = Ridge(alpha=1.0)
ridge.fit(X_train, y_train)
y_pred_ridge = ridge.predict(X_test)
r2_ridge = r2_score(y_test, y_pred_ridge)
print(f"Ridge Regression R²: {r2_ridge:.4f}")
lasso = Lasso(alpha=0.1)
lasso.fit(X_train, y_train)
y_pred_lasso = lasso.predict(X_test)
r2_lasso = r2_score(y_test, y_pred_lasso)
print(f"Lasso Regression R²: {r2_lasso:.4f}")
plt.figure(figsize=(15, 5))
plt.subplot(1, 3, 1)
sns.scatterplot(x=y_test, y=y_pred, alpha=0.6)
plt.plot([y_test.min(), y_test.max()], [y_test.min(), y_test.max()], 'r--')
plt.xlabel("Actual Score")
plt.ylabel("Predicted Score")
plt.title("Predicted vs Actual Scores")
plt.subplot(1, 3, 2)
sns.histplot(y_test - y_pred, kde=True, bins=20)
plt.xlabel("Residual")
plt.title("Residual Distribution")
plt.subplot(1, 3, 3)
sns.barplot(x='Coefficient', y='Feature', data=coef_df, orient='h')
plt.title("Feature Coefficients")
plt.tight_layout()
output_img = "scenario_1_plots.png"
plt.savefig(output_img)
print(f"Visualization saved as {output_img}")
plt.show()
